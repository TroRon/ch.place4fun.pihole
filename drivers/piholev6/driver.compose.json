  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "options": {
        "singular": true
      },
      "navigation": {
        "next": "configure_device"
      }
    },
    {
      "id": "configure_device",
      "navigation": {
        "prev": "list_devices"
